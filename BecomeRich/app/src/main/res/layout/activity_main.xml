        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:paddingRight="5dp">

            <ImageButton
                android:id="@+id/imageViewHealth"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:onClick="goToHealth"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/hearth" />

            <TextView
                android:id="@+id/textViewHealth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/imageViewHealth"
                android:layout_toRightOf="@+id/imageViewHealth"
                android:layout_weight="0.51"
                android:gravity="center|left"
                android:text="300/300"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBarHealth"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:indeterminate="false"
                android:max="100"
                android:progress="100"
                android:progressBackgroundTint="#ffffff"
                android:progressTint="#f442e5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:paddingRight="5dp">

            <ImageButton
                android:id="@+id/imageViewHunger"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:onClick="goToHunger"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/hunger_small" />

            <TextView
                android:id="@+id/textViewHunger"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/imageViewHunger"
                android:layout_toRightOf="@+id/imageViewHunger"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="300/300"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBarHunger"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="100"
                android:progressBackgroundTint="#ffffff"
                android:progressTint="#966453" />

        </LinearLayout>

