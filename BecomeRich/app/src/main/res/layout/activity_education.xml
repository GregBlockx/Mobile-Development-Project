<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blockx.greg.becomerich.EducationActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <include layout="@layout/common_menu"/>

        <ImageButton
            android:id="@+id/imageButtonEducation"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/education"
            android:layout_alignTop="@+id/imageButtonCriminalSkills"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="goToChooseEducation"/>

        <ImageButton
            android:id="@+id/imageButtonCriminalSkills"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="40dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/criminal_icon"
            android:onClick="goToChooseCriminalSkills"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



    </RelativeLayout>
</android.widget.RelativeLayout>
