<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blockx.greg.becomerich.WorkActivity">

    <include layout="@layout/common_menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_weight=".5"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5">

                <ImageButton
                    android:id="@+id/imageButtonWork"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:backgroundTint="@color/colorOrange"
                    android:onClick="goToDoWork"
                    android:padding="20dp"
                    android:scaleType="fitStart"
                    android:tint="@color/colorOrangeDark"
                    app:srcCompat="@mipmap/work_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:clickable="false"
                    android:padding="2dp"
                    android:text="@string/workScreenWork"
                    android:textColor="@color/colorOrangeDark"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5">

                <ImageButton
                    android:id="@+id/imageButtonCriminal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:backgroundTint="@color/colorLightBlue"
                    android:onClick="goToDoCriminalActivity"
                    android:padding="20dp"
                    android:scaleType="fitStart"
                    android:tint="@color/colorDarkBlue"
                    app:srcCompat="@mipmap/criminal_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:clickable="false"
                    android:padding="2dp"
                    android:text="@string/workScreenCriminal"
                    android:textColor="@color/colorDarkBlue"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5 ">


                <ImageButton
                    android:id="@+id/imageButtonBank"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:backgroundTint="@color/colorLightGreen"
                    android:onClick="goToBank"
                    android:padding="20dp"
                    android:scaleType="fitStart"
                    android:tint="@color/colorMidGreen"
                    app:srcCompat="@mipmap/bank_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:clickable="false"
                    android:padding="2dp"
                    android:text="@string/workScreenBank"
                    android:textColor="@color/colorMidGreen"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <ImageButton
                android:id="@+id/invisbutton"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight=".5"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".4">

        </LinearLayout>
    </LinearLayout>
</android.widget.RelativeLayout>
