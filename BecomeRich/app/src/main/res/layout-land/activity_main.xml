<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blockx.greg.becomerich.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp"
            android:layout_alignBaseline="@+id/textViewName"
            android:layout_alignBottom="@+id/textViewName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/imageViewPlayer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/player_icon" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:text="Mr. Dave"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textViewYourAge"
            android:layout_toStartOf="@+id/textViewYourAge" />

        <TextView
            android:id="@+id/textViewHunger"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:text="300/300"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/textViewHealth"
            android:layout_toRightOf="@+id/imageViewHunger"
            android:layout_toEndOf="@+id/imageViewHunger" />

        <TextView
            android:id="@+id/textViewHealth"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:text="300/300"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/progressBarHealth"
            android:layout_toRightOf="@+id/imageViewHealth"
            android:layout_toEndOf="@+id/imageViewHealth" />

        <TextView
            android:id="@+id/textViewYourEducation"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:text="Secondary School"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/textViewYourTransport"
            android:layout_toRightOf="@+id/imageViewEducation"
            android:layout_toEndOf="@+id/imageViewEducation" />

        <TextView
            android:id="@+id/textViewYourTransport"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:text="Foot"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_above="@+id/imageViewEducation"
            android:layout_toRightOf="@+id/imageViewCar"
            android:layout_toEndOf="@+id/imageViewCar"
            android:layout_below="@+id/textViewYourResidency" />

        <TextView
            android:id="@+id/textViewYourResidency"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:text="Streets"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/imageViewHouse"
            android:layout_toRightOf="@+id/imageViewHouse"
            android:layout_toEndOf="@+id/imageViewHouse" />

        <TextView
            android:id="@+id/textViewYourMoney"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:text="â‚¬ 999999999"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/textViewYourAge"
            android:layout_alignLeft="@+id/textViewYourAge"
            android:layout_alignStart="@+id/textViewYourAge" />
        <TextView
            android:id="@+id/textViewYourAge"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:text="18 years"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/login_button"
            android:layout_alignLeft="@+id/imageButtonWorkSmall"
            android:layout_alignStart="@+id/imageButtonWorkSmall"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp" />

        <ImageView
            android:id="@+id/imageViewHouse"
            android:layout_width="50dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/house"
            android:layout_above="@+id/imageViewHealth"/>

        <ImageView
            android:id="@+id/imageViewCar"
            android:layout_width="50dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/car"
            android:layout_above="@+id/imageViewHunger"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/imageViewEducation"
            android:layout_width="50dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/education"
            android:layout_alignBottom="@+id/imageViewHunger"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/imageViewHealth"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:onClick="goToHealth"
            app:srcCompat="@drawable/hearth"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/imageViewHunger"
            android:layout_alignStart="@+id/imageViewHunger" />

        <ImageButton
            android:id="@+id/imageViewHunger"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="goToHunger"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/hunger"
            android:layout_below="@+id/imageViewHealth"
            android:layout_alignLeft="@+id/imageButtonMarket"
            android:layout_alignStart="@+id/imageButtonMarket" />

        <ProgressBar
            android:id="@+id/progressBarHunger"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:max="100"
            android:progress="100"
            android:progressTint="#966453"
            android:progressBackgroundTint="#ffffff"
            android:layout_below="@+id/textViewHealth"
            android:layout_alignRight="@+id/login_button"
            android:layout_alignEnd="@+id/login_button"
            android:layout_alignLeft="@+id/progressBarHealth"
            android:layout_alignStart="@+id/progressBarHealth" />

        <ProgressBar
            android:id="@+id/progressBarHealth"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            android:progress="100"
            android:progressTint="#f442e5"
            android:progressBackgroundTint="#ffffff"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/imageButtonEducation"
            android:layout_alignStart="@+id/imageButtonEducation"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_alignRight="@+id/login_button"
            android:layout_alignEnd="@+id/login_button" />

        <ImageButton
            android:id="@+id/imageButtonWorkSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/briefcase_icon_pixel"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imageButtonPlayerInfo"
            android:layout_toEndOf="@+id/imageButtonPlayerInfo"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" />


        <ImageButton
            android:id="@+id/imageButtonMarket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/market_icon"
            android:onClick="goToMarket"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="32dp"
            android:layout_toLeftOf="@+id/imageButtonEducation"
            android:layout_toStartOf="@+id/imageButtonEducation" />


        <ImageButton
            android:id="@+id/imageButtonEducation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/education_icon_pixel"
            android:onClick="goToEducation"
            android:layout_marginRight="126dp"
            android:layout_marginEnd="126dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <ImageButton
            android:id="@+id/imageButtonPlayerInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/player_icon"
            android:onClick="goToPlayerInfo"
            android:layout_marginLeft="126dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="108dp" />
    </RelativeLayout>

</android.widget.RelativeLayout>
