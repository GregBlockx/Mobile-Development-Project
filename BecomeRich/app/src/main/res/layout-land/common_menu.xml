<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Lorem Ipsum"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorGreen">

            <ImageButton
                android:id="@+id/imageButtonPlayerInfo"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".25"
                android:backgroundTint="@color/colorDarkGreen"
                android:tint="@color/colorWhite"
                android:onClick="goToPlayerInfo"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/user_icon" />

            <ImageButton
                android:id="@+id/imageButtonWorkSmall"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".25"
                android:backgroundTint="@color/colorDarkGreen"
                android:tint="@color/colorWhite"
                android:onClick="goToWork"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/work_icon" />

            <ImageButton
                android:id="@+id/imageButtonMarket"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".25"
                android:backgroundTint="@color/colorDarkGreen"
                android:tint="@color/colorWhite"
                android:onClick="goToMarket"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/market_icon" />

            <ImageButton
                android:id="@+id/imageButtonEducationSmall"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".25"
                android:backgroundTint="@color/colorDarkGreen"
                android:tint="@color/colorWhite"
                android:onClick="goToEducation"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/education_icon" />


        </LinearLayout>
    </RelativeLayout>
</merge>