<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blockx.greg.becomerich.EducationActivity">

    <include layout="@layout/common_menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:padding="5dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".333333"
            android:padding="1dp"
            android:background="@color/colorMidGreen"
            android:layout_marginRight="5dp">

            <ImageButton
                android:id="@+id/imageButtonEducation"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:backgroundTint="@color/colorLightGreen"
                android:onClick="goToChooseEducation"
                android:scaleType="fitStart"
                android:tint="@color/colorMidGreen"
                app:srcCompat="@mipmap/education_icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:clickable="false"
                android:padding="2dp"
                android:text="@string/educationScreenSchool"
                android:textColor="@color/colorMidGreen"
                android:textSize="@dimen/buttonTextSize"
                android:textStyle="bold" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".333333"
            android:padding="1dp"
            android:background="@color/colorDarkRed">

            <ImageButton
                android:padding="30dp"
                android:id="@+id/imageButtonCriminalSkills"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:backgroundTint="@color/colorRed"
                android:onClick="goToChooseCriminalSkills"
                android:scaleType="fitStart"
                android:tint="@color/colorDarkRed"
                app:srcCompat="@mipmap/criminal_icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:clickable="false"
                android:padding="2dp"
                android:text="@string/educationSreenSkills"
                android:textColor="@color/colorDarkRed"
                android:textSize="@dimen/buttonTextSize"
                android:textStyle="bold" />
        </FrameLayout>

        <ImageButton
            android:id="@+id/invisbutton"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight=".33333"
            android:visibility="invisible" />
    </LinearLayout>
</android.widget.RelativeLayout>
