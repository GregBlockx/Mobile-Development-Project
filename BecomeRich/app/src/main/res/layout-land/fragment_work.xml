<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blockx.greg.becomerich.Activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:baselineAligned="false"
        android:padding="5dp">


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight=".333333"
            android:background="@color/colorOrangeDark"
            android:padding="1dp">

            <ImageButton
                android:padding="30dp"

                android:id="@+id/imageButtonWeapon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:backgroundTint="@color/colorOrange"
                android:onClick="goToChooseWeapon"
                android:scaleType="fitStart"
                android:tint="@color/colorOrangeDark"
                app:srcCompat="@mipmap/work_icon_large" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:clickable="false"
                android:padding="2dp"
                android:text="@string/workScreenWork"
                android:textColor="@color/colorOrangeDark"
                android:textSize="@dimen/buttonTextSize"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight=".333333"
            android:background="@color/colorDarkBlue"
            android:padding="1dp">

            <ImageButton
                android:padding="30dp"

                android:id="@+id/imageButtonTransport"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:backgroundTint="@color/colorLightBlue"
                android:onClick="goToChooseTransport"
                android:scaleType="fitStart"
                android:tint="@color/colorDarkBlue"
                app:srcCompat="@mipmap/criminal_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:clickable="false"
                android:padding="2dp"
                android:text="@string/workScreenCriminal"
                android:textColor="@color/colorDarkBlue"
                android:textSize="@dimen/buttonTextSize"
                android:textStyle="bold" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".333333"
            android:background="@color/colorMidGreen"
            android:padding="1dp">

            <ImageButton
                android:padding="30dp"
                android:id="@+id/imageButtonResidency"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:backgroundTint="@color/colorLightGreen"
                android:onClick="goToChooseResidency"
                android:scaleType="fitStart"
                android:tint="@color/colorMidGreen"
                app:srcCompat="@mipmap/bank_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:clickable="false"
                android:padding="2dp"
                android:text="@string/workScreenBank"
                android:textColor="@color/colorMidGreen"
                android:textSize="@dimen/buttonTextSize"
                android:textStyle="bold" />
        </FrameLayout>

    </LinearLayout>
</android.widget.RelativeLayout>