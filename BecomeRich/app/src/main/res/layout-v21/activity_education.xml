<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context="com.blockx.greg.becomerich.EducationActivity">

    <include layout="@layout/common_menu" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:layout_weight=".5"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5">

                <ImageButton
                    android:id="@+id/imageButtonEducation"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:backgroundTint="@color/colorLightGreen"
                    android:onClick="goToChooseEducation"
                    android:padding="20dp"
                    android:scaleType="fitStart"
                    android:tint="@color/colorMidGreen"
                    app:srcCompat="@mipmap/education_icon" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:clickable="false"
                    android:padding="2dp"
                    android:text="@string/educationScreenSchool"
                    android:textColor="@color/colorMidGreen"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </FrameLayout>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5">

                <ImageButton
                    android:id="@+id/imageButtonCriminalSkills"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:backgroundTint="@color/colorRed"
                    android:onClick="goToChooseCriminalSkills"
                    android:padding="20dp"
                    android:scaleType="fitStart"
                    android:tint="@color/colorDarkRed"
                    app:srcCompat="@mipmap/criminal_icon" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:clickable="false"
                    android:padding="2dp"
                    android:text="@string/educationSreenSkills"
                    android:textColor="@color/colorDarkRed"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".4" />
    </LinearLayout>
</RelativeLayout>
